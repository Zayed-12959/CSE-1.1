#include<stdio.h>

int main(){

    int n;
    printf("Enter n: ");
    scanf("%d", &n);
    int sum1=0;

    for(int i=1; i<=n; i++){
            int sum2=0;
        for(int j=1; j<=i; j++){
            printf("%d ", j);
            sum2 = sum2 + j;
        }
        printf("\n");
        sum1 = sum1 + sum2;
    }

    printf("Sum: %d", sum1);

return 0;
}
