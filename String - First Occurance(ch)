#include<stdio.h>

int main(){

    char str[1000];
    char ch;
    int found = 0;

    printf("Enter a string:");
    fgets(str, sizeof(str), stdin);

    printf("Enter a character:");
    scanf("%c", &ch);

    for(int i=0; str[i]!=0; i++){
        if(str[i]==ch){
            printf("The character %c has been found in position %d", ch, i);
            found = 1;
            break;
        }
    }

    if(!found){
        printf("Character is absent");
    }

return 0;
}
