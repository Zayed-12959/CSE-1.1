#include<stdio.h>

int main(){

    int x = 5;
    int y = 10;

    int *p1;
    p1 = &x;

    printf("Value of x : %d\n", x);
    printf("Address of x: %d\n", &x);
    printf("Address of p1: %d\n", p1);
    printf("Content of p1: %d\n", *p1);
    printf("Address of p: %d\n", &p1);

    printf("\n");

    p1 = &y;

    printf("Value of y : %d\n", y);
    printf("Address of y: %d\n", &y);
    printf("Address of p1: %d\n", p1);
    printf("Content of p1: %d\n", *p1);
    printf("Address of p: %d\n", &p1);

return 0;
}
